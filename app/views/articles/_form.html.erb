<%= form_with(model: @article, html: {multipart: true}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      
      <ul>
        <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url(:thumb) %>
    <% end %>
    <div class="field">
      <%= f.label :image, "Attach an Image" %><br/>
      <%= f.file_field :image %>
    </div>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>